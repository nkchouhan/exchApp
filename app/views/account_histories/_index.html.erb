<h2>Account History</h2>
<p>
  Download:
  <%= link_to "CSV", home_dashboard_path(format: "csv") %>
</p>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>BTC</th>
      <th>DOGE</th>
      <th>GCS</th>
      <th>LTC</th>
      <th>Details</th>
    </tr>
  </thead>

  <tbody>
    <% @account_histories.each do |admin_account_history| %>
      <tr>
        <td><%= admin_account_history.ac_date.strftime('%m/%d/%Y') unless admin_account_history.ac_date.blank? %></td>
        <td><%= admin_account_history.btc %></td>
        <td><%= admin_account_history.doge %></td>
        <td><%= admin_account_history.gcs %></td>
        <td><%= admin_account_history.ltc %></td>
        <td><%= admin_account_history.details %></td>
      </tr>
    <% end %>
  </tbody>
</table>

