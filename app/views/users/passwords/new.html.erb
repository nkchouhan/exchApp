<div class="span3 left-div"></div>
<div class="user-sign-in">

	<legend>Forgot your password?</legend>

	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>

		<div><%= f.email_field :email, autofocus: true, :placeholder => 'Enter Email Address', :class=>"input-xlarge" %></div>
		<div><%= f.submit "Send me reset password instructions", :class => 'btn btn-primary', :style=>"width: 52%;" %></div>
	<% end %>

	<legend class="bottom-legend"></legend>
	<%= render "users/shared/links" %>
</div>
