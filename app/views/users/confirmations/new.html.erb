<div class="span3 left-div"></div>
<div class="user-sign-in">

	<legend>Resend confirmation instructions</legend>

	<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
		<%= devise_error_messages! %>

		<div><%= f.email_field :email, autofocus: true, :placeholder => 'Enter Email Address', :class=>"input-xlarge" %></div>
		<div><%= f.submit "Resend confirmation instructions", :class => 'btn btn-primary', :style=>"width: 50%;" %></div>
	<% end %>

	<legend class="bottom-legend"></legend>
	<%= render "users/shared/links" %>
</div>
