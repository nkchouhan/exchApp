<%= form_for [:admin, @admin_stats_bar], :html => {:class => "form-horizontal"} do |f| %>
  <fieldset>
    <legend><%= @admin_stats_bar.new_record? ? "Make New Stats Bar" : "Edit Existing Stats Bar"%></legend>
		<% if @admin_stats_bar.errors.any? %>
			<div id="error_explanation">
				<h2><%= pluralize(@admin_stats_bar.errors.count, "error") %> prohibited this admin_stats_bar from being saved:</h2>

				<ul>
				<% @admin_stats_bar.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
				</ul>
			</div>
		<% end %>

		<div class="control-group">
			<%= f.label :coin, :class => "control-label" %>
			<div class="controls">
				<%= f.select(:coin, COIN, {}, { :class => 'form-control input-xlarge', :style => "width: 284px;" }) %>
			</div>
		</div>
		<div class="control-group">
			<%= f.label :bid, :class => "control-label" %>
			<div class="controls">
				<%= f.text_field :bid, :class => "input-xlarge" %>
			</div>
		</div>
		<div class="control-group">
			<%= f.label :ask, :class => "control-label" %>
			<div class="controls">
				<%= f.text_field :ask, :class => "input-xlarge" %>
			</div>
		</div>
		<div class="control-group">
			<%= f.label :high, :class => "control-label" %>
			<div class="controls">
				<%= f.text_field :high, :class => "input-xlarge" %>
			</div>
		</div>
		<div class="control-group">
			<%= f.label :low, :class => "control-label" %>
			<div class="controls">
				<%= f.text_field :low, :class => "input-xlarge" %>
			</div>
		</div>
		<div class="control-group">
			<%= f.label :last, :class => "control-label" %>
			<div class="controls">
				<%= f.text_field :last, :class => "input-xlarge" %>
			</div>
		</div>
		<div class="control-group">
			<%= f.label :vol, :class => "control-label" %>
			<div class="controls">
				<%= f.text_field :vol, :class => "input-xlarge" %>
			</div>
		</div>

		<div class="form-actions">
			<%= f.submit :class => "btn btn-primary" %>
		</div>
	</fieldset>	
<% end %>
