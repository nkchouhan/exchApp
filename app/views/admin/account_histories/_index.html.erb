<h2>Account Histories</h2>
<p>
  Download:
  <%= link_to "CSV", admin_account_histories_path(format: "csv") %>
</p>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>BTC</th>
      <th>DOGE</th>
      <th>GCS</th>
      <th>LTC</th>
      <th>Details</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_account_histories.each do |admin_account_history| %>
      <tr>
        <td><%= admin_account_history.ac_date.strftime('%m/%d/%Y') %></td>
        <td><%= admin_account_history.btc %></td>
        <td><%= admin_account_history.doge %></td>
        <td><%= admin_account_history.gcs %></td>
        <td><%= admin_account_history.ltc %></td>
        <td><%= admin_account_history.details %></td>
        <td><%= link_to 'Show', admin_account_history_path(admin_account_history), :class => "btn btn-info" %></td>
        <td><%= link_to '<i class="icon-edit"></i> Edit'.html_safe, edit_admin_account_history_path(admin_account_history), :class => "btn btn-success" %></td>
        <td><%= link_to '<i class="icon-trash"></i> Destroy'.html_safe, admin_account_history_path(admin_account_history), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '<i class="icon-plus"></i> New Account history'.html_safe, new_admin_account_history_path, :class => "btn btn-primary" %>
